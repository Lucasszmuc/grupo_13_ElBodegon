<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>

  <body class="body">
    <header><%- include("../partials/navbar") %></header>
    <main>
      <h1 class="title">Crear Producto</h1>
      <form action="/product/createProduct" id="createForm" class="formulario-editar" method="POST"
        enctype="multipart/form-data">
          <div class="form-row">
          <div class="form-group">
            <label for="productName">Nombre del Producto:</label>
            <input type="text" id="productName" class="productName" name="name"
              value="<%= locals.old && locals.old.name ? locals.old.name : '' %>" />
            <% if (locals.errors) { %>
              <% errors.forEach(error=> {%> <% if (error.path==='name' ) { %>
                  <p class="error-messages">
                    <%= error.msg %>
                  </p>
                  <% } %>
                    <% }); %>
                      <% } %>
          </div>
          
          <div class="form-group">
            <label for="productPrice">Precio:</label>
            <input type="text" id="productPrice" class="productPrice" name="price"
            value="<%= locals.old && locals.old.price ? locals.old.price : '' %>" />
          </div>
          
        </div>
          <div class="form-group">
            <label for="category">Categoria:</label>
            <select id="comida" class="productCategory" name="category">
              <option value="">Seleccione una opción</option>
              <option value="Bebidas">Bebidas</option>
              <option value="Carnes">Carnes</option>
              <option value="Ensaladas">Ensaladas</option>
              <option value="Milanesas">Milanesas</option>
              <option value="Pescados">Pescados</option>
              <option value="Postres">Postres</option>
            </select>
          </div>
          <div class="form-group">
            <label for="image">Cargar imagen:</label>
            <input type="file" class="image" id="imagen" name="image" />
            <% if (locals.errors) { %>
              <% errors.forEach(error=> {%> <% if (error.path==='image' ) { %>
                  <p class="error-messages">
                    <%= error.msg %>
                  </p>
                  <% } %>
                    <% }); %>
                      <% } %>
          </div>
        </div>
        <div class="section-container des">
          <div class="form-group">
            <label for="productDescription">Descripcion:</label>
            <textarea class="Descripcion" id="productDescription" name="description"
              value="<%= locals.old && locals.old.description ? locals.old.description : '' %>"></textarea>
            <% if (locals.errors) { %>
              <% errors.forEach(error=> {%> <% if (error.path==='description' ) { %>
                  <p class="error-messages">
                    <%= error.msg %>
                  </p>
                  <% } %>
                    <% }); %>
                      <% } %>
          </div>
          <div class="form-row">
          <div class="form-group">
            <label for="productDescuento">Aplicar descuento?</label>
            <div class="descuento">
              <div class="si">
                <label for="si">Sí</label>
                <input type="radio" id="si" name="discount" value="si" />
                <div class="cual-descuento">
                  <input type="text" placeholder="Escriba su código aquí" />
                </div>
              </div>
              <div class="no">
                <label for="no">No</label>
                <input type="radio" name="discount" value="no" />
              </div>
            </div>
          </div>
        </div>
        <div class="botones">
          <input class="boton-enviar" type="submit" value="Crear Producto" />
        </div>
      </form>
    </main>
    <footer><%- include("../partials/footer") %></footer>
    <%- include('../partials/script') %>
    <script src="/js/validatorCreateProduct.js"></script>
  </body>

</html>